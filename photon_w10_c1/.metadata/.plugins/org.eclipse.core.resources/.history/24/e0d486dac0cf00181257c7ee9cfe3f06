package java_sessional;

public class thread_basic_1 {
	
	public void whatever(){
		System.out.println("Whatever code you have outside of run method will not be printed if you are using thread");
		}
	
	public static void main(String[] args) throws Exception{
        
		Runnable_DemO objR = new Runnable_DemO();
		Thread T1 = new Thread(objR);
		
		A objA = new A();
        
		objA.start();
        T1.start();
         
    }
}   





class A extends Thread {    
		
	public void run() {

        for (int i = 0; i < 10; i++) {
            System.out.println("take " + i + "from class A");
            try {
                Thread.sleep(2000);
            } catch (InterruptedException e) {
                e.printStackTrace();
            }
        }
    }
}



class Runnable_DemO implements Runnable {
    @Override
    public void run() {
    	
    	for (int i = 0; i < 10; i++) {
            System.out.println("take " + i + "from class RunnableDemo");
            try {
                Thread.sleep(2000);
            } catch (InterruptedException e) {
                e.printStackTrace();
            }
        }
       
    }
}



